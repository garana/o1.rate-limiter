{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}